extends layout

block content
  h1 welcome to my color changer
  form(method="POST" action="/")
    input(type="color" name="colorPicker" id="picker" value=`${color}`)
    label(for="picker") click me
    input(type="color" name="textColorPicker" id="textPicker" value=`${textColor}`)
    label(for="textPicker") Click Me!
    button(type="submit") Submit
